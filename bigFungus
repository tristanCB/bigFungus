server {
    listen 80;
    server_name bigFungus.ca, www.bigFungus.ca;
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen              443 ssl;
    server_name         bigFungus.ca, www.bigFungus.ca;
    ssl_certificate     /etc/letsencrypt/live/bigfungus.ca/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bigfungus.ca/privkey.pem;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    root /home/ubuntu/bigFungus;

    location /static  {
        alias /home/ubuntu/bigFungus/static/;
    }

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

}